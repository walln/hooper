{
	"name": "@hooper/tailwind",
	"version": "0.1.4",
	"private": true,
	"description": "Tailwindcss preset for hooper",
	"type": "module",
	"exports": {
		".": "./src/preset.ts"
	},
	"scripts": {
		"typecheck": "tsc --noEmit --tsBuildInfoFile .tsbuildinfo",
		"lint": "biome lint .",
		"lint:fix": "biome lint --apply .",
		"format": "biome format .",
		"format:fix": "biome format --write . "
	},
	"dependencies": {
		"@radix-ui/colors": "^3.0.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.13",
		"tailwindcss": "^3.4.3",
		"tailwindcss-animate": "^1.0.7",
		"windy-radix-palette": "2.0.0-beta.7",
		"windy-radix-typography": "1.0.0-beta.0"
	},
	"devDependencies": {
		"@hooper/tsconfig": "workspace:*",
		"@types/node": "^20.12.11"
	}
}
