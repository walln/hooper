{
	"extends": "@hooper/tsconfig/nextjs.json",
	"compilerOptions": {
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"declarationMap": false,
		"declaration": false,
		"paths": {
			"@/*": ["./*"]
		},
		"strictNullChecks": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"next.config.cjs",
		"postcss.config.cjs"
	],
	"exclude": ["node_modules", ".next"]
}
